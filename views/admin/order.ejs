                                                                                            href="/admin/orderdetails/<%= order._id %>?productId=<%= item.productId._id %>">View</a>
                                                                                    </div>
                                                                                </div> <!-- dropdown //end -->
                                                                    </td>
                                                </tr>
                                                <% serialNumber++; %>
                                                    <% } %>
                                                        <% }) %>

                                                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <!-- table-responsive //end -->

                </div> <!-- card-body end// -->



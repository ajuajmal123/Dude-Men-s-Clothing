        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>

                </div>

            </div>
            <div class="card mb-4">
                <header class="card-header">

                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Order No:</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Customer</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Total Amount</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let serialNumber=1; %>
                                    <% orders.forEach(order=> { %>

                                        <% order.items.forEach(item=> { %>
                                            <% if(item.deliveryStatus !=='Payment Pending' ){ %>
                                                <tr>
                                                    <td>
                                                        <%= serialNumber %>
                                                    </td>
                                                    <td><img src="/admin-assets/imgs/items/<%= item.productId.primary_image.name %>"
                                                            class="img-fluid" style="width: 60px; height: 60px;"
                                                            alt="Product Image"></td>
                                                    <td>
                                                        <% if (order.userId && order.userId.name) { %>
                                                            <b>
                                                                <%= order.userId.name %>
                                                            </b>
                                                            <% } else { %>
                                                                <b>Unknown User</b>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <%= order.paymentMethod %>
                                                    </td>
                                                    <% if(order.couponDiscount>0){ %>
                                                        <td>$<%=(item.quantity * item.productId.selling_price)-
                                                                (item.quantity * item.productId.selling_price *
                                                                (order.couponDiscount/100)) %>
                                                        </td>
                                                        <% } %>
                                                            <% if(order.couponDiscount==0){ %>
                                                                <td>$<%= item.quantity * item.productId.selling_price %>
                                                                </td>
                                                                <% } %>
                                                                    <td><span
                                                                            class="badge rounded-pill alert-warning"><strong
                                                                                style="color:<%= item.deliveryStatus === 'Cancelled' ? 'red' : (item.deliveryStatus === 'Delivered' ? 'green' : 'inherit') %>">
                                                                                <%= item.deliveryStatus %>
                                                                            </strong></span></td>
                                                                    <td class="text-end">
                                                                        <% if(item.deliveryStatus=='Return Requested' ){
                                                                            %>
                                                                            <textarea
                                                                                class="form-control"><%= item.returnReason %></textarea>
                                                                            <% } %>
                                                                                <div class="dropdown">
                                                                                    <button
                                                                                        class="btn btn-primary btn-sm font-sm dropdown-toggle"
                                                                                        type="button"
                                                                                        id="statusDropdown-<%= order._id %>"
                                                                                        data-bs-toggle="dropdown"
                                                                                        aria-expanded="false">
                                                                                        Status
                                                                                    </button>
                                                                                    <ul class="dropdown-menu"
                                                                                        aria-labelledby="statusDropdown-<%= order._id %>">
                                                                                        <li><a class="dropdown-item"
                                                                                                href="#"
                                                                                                onclick="updateStatus('<%= order._id %>','Returned','<%= item.productId._id %>')">Return
                                                                                                Approved</a></li>
                                                                                        <li><a class="dropdown-item"
                                                                                                href="#"
                                                                                                onclick="cancelOrder('<%= order._id %>','<%= item.productId._id %>','<%= item.quantity%>')">Cancelled</a>
                                                                                        </li>
                                                                                        <li><a class="dropdown-item"
                                                                                                href="#"
                                                                                                onclick="updateStatus('<%= order._id %>', 'Delivered','<%= item.productId._id %>')">Delivered</a>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                                <div class="dropdown">
                                                                                    <a href="#"
                                                                                        data-bs-toggle="dropdown"
                                                                                        class="btn  btn-sm font-sm"> <i
